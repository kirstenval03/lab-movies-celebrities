{{!-- views/celebrities/celebrity-create.hbs --}}

<h2>Add a celebrity</h2>

<form action="/celebrities/create" method="post">
  <label> Name:
    <input type="text" name="name" />
  </label>

  <label> Occupation:
    <input type="text" name="occupation" />
  </label>

  <label> CatchPhrase:
    <textarea name="catchPhrase" cols="30" rows="4"> </textarea>
  </label>



  <button type="submit"> Add </button>
</form>